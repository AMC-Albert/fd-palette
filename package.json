{
	"name": "rip-open",
	"author": "Albert O'Shea",
	"publisher": "rip-open-dev",
	"displayName": "Rip Open",
	"description": "System-wide directory search and workspace management using ripgrep and fzf.",
	"version": "0.9.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/AMC-Albert/rip-open"
	},
	"engines": {
		"vscode": "^1.90.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"ripgrep",
		"fzf",
		"rg",
		"search",
		"directories",
		"workspace",
		"file-explorer"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "rip-open.addToWorkspace",
				"title": "Add Directories to Workspace",
				"category": "Rip Open"
			},
			{
				"command": "rip-open.openInCurrentWindow",
				"title": "Open Directory in Current Window",
				"category": "Rip Open"
			},
			{
				"command": "rip-open.openInNewWindow",
				"title": "Open Directory in New Window",
				"category": "Rip Open"
			},
			{
				"command": "rip-open.clearCache",
				"title": "Clear Search Cache",
				"category": "Rip Open"
			},
			{
				"command": "rip-open.resetSettings",
				"title": "Reset Settings to Default",
				"category": "Rip Open"
			},
			{
				"command": "rip-open.removeSelectedFolder",
				"title": "Remove Selected Folder from Workspace",
				"category": "Rip Open"
			}
		],
		"keybindings": [
			{
				"command": "rip-open.addToWorkspace",
				"key": "ctrl+alt+d",
				"mac": "cmd+alt+d"
			},
			{
				"command": "rip-open.openInCurrentWindow",
				"key": "ctrl+alt+o",
				"mac": "cmd+alt+o"
			},
			{
				"command": "rip-open.openInNewWindow",
				"key": "ctrl+alt+shift+o",
				"mac": "cmd+alt+shift+o"
			},
			{
				"command": "rip-open.removeSelectedFolder",
				"key": "ctrl+shift+delete",
				"mac": "cmd+shift+delete"
			}
		],
		"configuration": {
			"title": "Rip Open",
			"properties": {
				"ripOpen.searchPath": {
					"type": "array",
					"items": {
						"type": "string"
					},
					"default": [],
					"description": "List of search paths for directory search - first valid directory wins (leave empty to search from root)"
				},
				"ripOpen.maxDepth": {
					"type": "number",
					"default": 10,
					"description": "Maximum search depth for ripgrep"
				},
				"ripOpen.excludePatterns": {
					"type": "array",
					"items": {
						"type": "string"
					},
					"default": [
						"node_modules",
						"packages",
						".git",
						"lfs",
						".svn",
						".vscode",
						"target",
						"build",
						"dist",
						".next",
						".nuxt",
						"lib",
						"site-packages",
						"__pycache__",
						"__MACOSX",
						".DS_Store",
						".venv",
						".env",
						"venv",
						"env",
						".pytest_cache",
						"miniconda3",
						"miniconda",
						".mypy_cache",
						".tox",
						"coverage",
						".coverage",
						".nyc_output",
						"logs",
						"*.log",
						"tmp",
						"temp",
						".tmp",
						".temp",
						"cache",
						".cache",
						"*.swp",
						"*.swo",
						"AppData",
						"Application Data",
						"System Volume Information",
						"Recovery",
						"$Recycle.Bin",
						"$RECYCLE.BIN",
						"ProgramData",
						"Program Files",
						"Program Files (x86)",
						"Windows",
						".android",
						".aws",
						".azure",
						".docker",
						".npm",
						".nvm",
						".gradle",
						".m2",
						".maven",
						".cargo",
						".rustup",
						".go",
						".dotnet",
						".nuget",
						".yarn",
						".pnpm-store",
						"pnpm-store",
						".local/share",
						".config",
						".ssh",
						".gnupg",
						".gpg",
						"ShaderCache",
						"PackageCache",
						"StateCache",
						"ScriptAssemblies",
						"BurstCache",
						"Artifacts",
						"CMakeFiles"
					],
					"description": "Patterns to exclude from search (default includes common build/cache directories)"
				},
				"ripOpen.ripgrepPath": {
					"type": "string",
					"default": "auto",
					"description": "Path to ripgrep executable (use 'auto' for automatic detection, 'rg' if in PATH, or specify full path)"
				},
				"ripOpen.fzfPath": {
					"type": "string",
					"default": "fzf",
					"description": "Path to fzf executable (use 'fzf' if in PATH)"
				},
				"ripOpen.enableFzf": {
					"type": "boolean",
					"default": true,
					"description": "Enable fzf integration for improved fuzzy matching when available"
				},
				"ripOpen.fzfOptions": {
					"type": "string",
					"default": "--height=60% --layout=reverse --border --info=inline --cycle",
					"description": "Additional options to pass to fzf for enhanced fuzzy matching"
				},
				"ripOpen.enableCache": {
					"type": "boolean",
					"default": true,
					"description": "Enable caching of search results for faster subsequent searches"
				},
				"ripOpen.cacheDurationMinutes": {
					"type": "number",
					"default": 2,
					"description": "Cache duration in minutes before results are considered stale"
				},
				"ripOpen.enableBackgroundRefresh": {
					"type": "boolean",
					"default": true,
					"description": "Enable background cache refresh for better performance (automatically refreshes expired cache in background)"
				},
				"ripOpen.openInWindow": {
					"type": "boolean",
					"default": true,
					"description": "Whether to open directories in a new window by default"
				},
				"ripOpen.uiDisplayLimit": {
					"type": "number",
					"default": 100,
					"description": "Maximum number of items to display in the UI before requiring filtering"
				},
				"ripOpen.includeHidden": {
					"type": "boolean",
					"default": true,
					"description": "Include hidden files and directories in search (adds --hidden flag to ripgrep)"
				},
				"ripOpen.respectGitignore": {
					"type": "boolean",
					"default": false,
					"description": "Respect .gitignore and other ignore files (removes --no-ignore flag from ripgrep)"
				},				"ripOpen.boostGitDirectories": {
					"type": "boolean",
					"default": true,
					"description": "Give higher priority to directories that contain a .git folder (git repositories)"
				},
				"ripOpen.includeWorkspaceFiles": {
					"type": "boolean",
					"default": true,
					"description": "Include .code-workspace files in search results with high priority"
				},
				"ripOpen.additionalRipgrepArgs": {
					"type": "array",
					"items": {
						"type": "string"
					},
					"default": [],
					"description": "Additional command-line arguments to pass to ripgrep (e.g., ['--follow', '--case-sensitive'])"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "pnpm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "pnpm run compile && pnpm run lint",
		"lint": "eslint src",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@types/vscode": "^1.90.0",
		"@types/mocha": "^10.0.10",
		"@types/node": "20.x",
		"@typescript-eslint/eslint-plugin": "^8.31.1",
		"@typescript-eslint/parser": "^8.31.1",
		"eslint": "^9.25.1",
		"typescript": "^5.8.3",
		"@vscode/test-cli": "^0.0.10",
		"@vscode/test-electron": "^2.5.2"
	}
}
