{
	"name": "rip-add",
	"author": "Albert O'Shea",
	"publisher": "rip-add-dev",
	"displayName": "Rip Add",
	"description": "Quick directory search and workspace management using ripgrep and fzf",
	"version": "0.5.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/AMC-Albert/rip-add"
	},
	"engines": {
		"vscode": "^1.90.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"ripgrep",
		"fzf",
		"rg",
		"search",
		"directories",
		"workspace",
		"file-explorer"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "rip-add.addToWorkspace",
				"title": "Add Directories to Workspace",
				"category": "Rip Add"
			},
			{
				"command": "rip-add.openInWindow",
				"title": "Open Directory in New Window",
				"category": "Rip Add"
			},
			{
				"command": "rip-add.clearCache",
				"title": "Clear Search Cache",
				"category": "Rip Add"
			},
			{
				"command": "rip-add.resetSettings",
				"title": "Reset Settings to Default",
				"category": "Rip Add"
			}
		],
		"keybindings": [
			{
				"command": "rip-add.addToWorkspace",
				"key": "ctrl+alt+d",
				"mac": "cmd+alt+d"
			},
			{
				"command": "rip-add.openInWindow",
				"key": "ctrl+alt+shift+d",
				"mac": "cmd+alt+shift+d"
			}
		],
		"configuration": {
			"title": "Rip Add",
			"properties": {
				"ripAdd.searchPath": {
					"type": "array",
					"items": {
						"type": "string"
					},
					"default": [],
					"description": "List of search paths for directory search - first valid directory wins (leave empty to search from root)"
				},
				"ripAdd.maxDepth": {
					"type": "number",
					"default": 10,
					"description": "Maximum search depth for ripgrep"
				},
				"ripAdd.excludePatterns": {
					"type": "array",
					"items": {
						"type": "string"
					},
					"default": [
						"node_modules",
						"packages",
						".git",
						"lfs",
						".svn",
						".vscode",
						"target",
						"build",
						"dist",
						".next",
						".nuxt",
						"lib",
						"site-packages",
						"__pycache__",
						"__MACOSX",
						".DS_Store",
						".venv",
						".env",
						"venv",
						"env",
						".pytest_cache",
						"miniconda3",
						"miniconda",
						".mypy_cache",
						".tox",
						"coverage",
						".coverage",
						".nyc_output",
						"logs",
						"*.log",
						"tmp",
						"temp",
						".tmp",
						".temp",
						"cache",
						".cache",
						"*.swp",
						"*.swo",
						"AppData",
						"Application Data",
						"System Volume Information",
						"Recovery",
						"$Recycle.Bin",
						"$RECYCLE.BIN",
						"ProgramData",
						"Program Files",
						"Program Files (x86)",
						"Windows",
						".android",
						".aws",
						".azure",
						".docker",
						".npm",
						".nvm",
						".gradle",
						".m2",
						".maven",
						".cargo",
						".rustup",
						".go",
						".dotnet",
						".nuget",
						".yarn",
						".pnpm-store",
						".local/share",
						".config",
						".ssh",
						".gnupg",
						".gpg"
					],
					"description": "Patterns to exclude from search (default includes common build/cache directories)"
				},
				"ripAdd.ripgrepPath": {
					"type": "string",
					"default": "auto",
					"description": "Path to ripgrep executable (use 'auto' for automatic detection, 'rg' if in PATH, or specify full path)"
				},
				"ripAdd.fzfPath": {
					"type": "string",
					"default": "fzf",
					"description": "Path to fzf executable (use 'fzf' if in PATH)"
				},
				"ripAdd.enableFzf": {
					"type": "boolean",
					"default": true,
					"description": "Enable fzf integration for improved fuzzy matching when available"
				},
				"ripAdd.fzfOptions": {
					"type": "string",
					"default": "--height=60% --layout=reverse --border --info=inline --cycle",
					"description": "Additional options to pass to fzf for enhanced fuzzy matching"
				},
				"ripAdd.enableCache": {
					"type": "boolean",
					"default": true,
					"description": "Enable caching of search results for faster subsequent searches"
				},
				"ripAdd.cacheDurationMinutes": {
					"type": "number",
					"default": 2,
					"description": "Cache duration in minutes before results are considered stale"
				},
				"ripAdd.enableBackgroundRefresh": {
					"type": "boolean",
					"default": true,
					"description": "Enable background cache refresh for better performance (automatically refreshes expired cache in background)"
				},
				"ripAdd.openInWindow": {
					"type": "boolean",
					"default": true,
					"description": "Whether to open directories in a new window by default"
				},
				"ripAdd.uiDisplayLimit": {
					"type": "number",
					"default": 100,
					"description": "Maximum number of items to display in the UI before requiring filtering"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "pnpm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "pnpm run compile && pnpm run lint",
		"lint": "eslint src",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@types/vscode": "^1.90.0",
		"@types/mocha": "^10.0.10",
		"@types/node": "20.x",
		"@typescript-eslint/eslint-plugin": "^8.31.1",
		"@typescript-eslint/parser": "^8.31.1",
		"eslint": "^9.25.1",
		"typescript": "^5.8.3",
		"@vscode/test-cli": "^0.0.10",
		"@vscode/test-electron": "^2.5.2"
	}
}
